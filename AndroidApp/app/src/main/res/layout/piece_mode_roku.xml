<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_hulu"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconResource="@drawable/ic_hulu"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_plex"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconResource="@drawable/ic_plex"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingTop="@dimen/plexTopOffset"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_amazon"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconResource="@drawable/ic_amazon_video"
            fancy:fb_iconPaddingLeft="0dp"
            fancy:fb_iconPaddingRight="0dp"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_discovery"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_iconResource="@drawable/ic_discovery_logo"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_text=""
            fancy:fb_textColor="#FFFFFF" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_netflix"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconResource="@drawable/ic_netflix"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_disney"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconResource="@drawable/ic_disney"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_hbo"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_iconResource="@drawable/ic_hbo"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_apple"
            android:layout_width="@dimen/modeSize"
            android:layout_height="@dimen/modeSize"
            fancy:fb_iconPaddingLeft="@dimen/modeIconPadding"
            fancy:fb_iconPaddingRight="@dimen/modeIconPadding"
            fancy:fb_iconResource="@drawable/ic_apple"
            fancy:fb_defaultColor="@color/modeDefault"
            fancy:fb_focusColor="@color/modePressed"
            fancy:fb_radius="@dimen/roundedSquareRadius"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_text="" />

    </LinearLayout>

</LinearLayout>